<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="64dp"
            android:layout_centerHorizontal="true"
            tools:context="com.example.android.ruraldevelopmenthackathonv1.FetchRecords"
            android:id="@+id/rd_ss_fetchrecords"
            android:visibility="visible"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Search for"
                android:textSize="18sp"
                android:id="@+id/rd_ss_searchfor_label"
                android:gravity="center_vertical"
                android:textColor="@android:color/holo_red_dark"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dp"
                android:id="@+id/rd_ss_searchfor_separator"
                android:visibility="visible"
                android:background="@android:color/black"
                android:layout_marginBottom="5dp"
                />
            <EditText
                android:id="@+id/rd_ss_searchbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:hint="Search"
                android:inputType="text"
                android:drawableRight="@android:drawable/ic_menu_search"
                />
            <ListView
                android:id="@+id/rd_ss_results"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="visible"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:id="@+id/rd_ss_detailLayout"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rd_ss_recparent_id"
                android:gravity="center_vertical"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Mother Details"
                android:textSize="18sp"
                android:id="@+id/rd_ss_recmother_label"
                android:gravity="center_vertical"
                android:textColor="@android:color/holo_red_dark"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dp"
                android:id="@+id/rd_ss_recmotherseparator"
                android:visibility="visible"
                android:background="@android:color/black"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:hint="Mother's Name"
                    android:textSize="22sp"
                    android:id="@+id/rd_ss_recmother_name"
                    android:inputType="text"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:hint="Age"
                    android:id="@+id/rd_ss_recmother_age"
                    android:textSize="22sp"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:text="Health Status"
                    android:textSize="22sp"
                    android:id="@+id/rd_ss_recmother_sts_lbl"
                    android:inputType="text"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_ss_recmother_status"
                    android:visibility="visible"
                    android:inputType="text"
                    android:layout_alignParentRight="true"
                    android:textSize="22sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:hint="Due date"
                    android:textSize="22sp"
                    android:id="@+id/rd_ss_recdue_dt_label"
                    android:inputType="text"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_ss_recdue_dt"
                    android:textSize="22sp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Appointment Details"
                android:textSize="18sp"
                android:id="@+id/rd_ss_motherAppointment_label"
                android:gravity="center_vertical"
                android:textColor="@android:color/holo_red_dark"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dp"
                android:id="@+id/rd_ss_motherApptmtseparator"
                android:visibility="visible"
                android:background="@android:color/black"
                android:layout_marginBottom="5dp"
                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                android:id="@+id/mother_current_apptmt_layout"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:text="Current"
                    android:textSize="22sp"
                    android:id="@+id/rd_ss_mother_current_apptmt_dt_lbl"
                    android:inputType="text"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_ss_mother_current_apptmt_dt"
                    android:visibility="visible"
                    android:inputType="text"
                    android:layout_alignParentRight="true"
                    android:textSize="22sp"
                    />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rd_ss_motherMarkApptmt"
                android:text="Mark as done"
                android:onClick="MarkMotherApptmtDone"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                android:id="@+id/rd_mother_next_apptmt"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:text="Next"
                    android:textSize="22sp"
                    android:id="@+id/rd_ss_mother_next_apptmt_dt_lbl"
                    android:inputType="text"

                    />
                <EditText
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_ss_mother_next_apptmt_dt"
                    android:visibility="visible"
                    android:inputType="date"
                    android:layout_alignParentRight="true"
                    android:textSize="22sp"
                    />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rd_ss_motherSetNextApptmt"
                android:onClick="BabySetNextAppointment"
                android:text="Set Next Appointment"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/rd_ss_babydetails_layout"
                >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Baby Details"
                android:textSize="18sp"
                android:id="@+id/rd_ss_recbaby_label"
                android:gravity="center_vertical"
                android:textColor="@android:color/holo_red_dark"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dp"
                android:id="@+id/rd_ss_recbabyseparator"
                android:visibility="visible"
                android:background="@android:color/black"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:hint="Baby Name"
                    android:textSize="22sp"
                    android:id="@+id/rd_ss_recbaby_name"
                    android:inputType="text"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:hint="Age"
                    android:id="@+id/rd_ss_baby_age"
                    android:textSize="22sp"
                    android:inputType="number"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:hint="Health Status"
                    android:textSize="22sp"
                    android:id="@+id/rd_ss_recbaby_sts_lbl"
                    android:inputType="text"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_ss_recbaby_status"
                    android:visibility="visible"
                    android:inputType="text"
                    android:layout_alignParentRight="true"
                    android:textSize="22sp"
                    />
            </RelativeLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Appointment Details"
                    android:textSize="18sp"
                    android:id="@+id/rd_ss_babyAppointment_label"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/holo_red_dark"
                    />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.8dp"
                    android:id="@+id/rd_ss_babyApptmtseparator"
                    android:visibility="visible"
                    android:background="@android:color/black"
                    android:layout_marginBottom="5dp"
                    />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="32dp"
                    android:id="@+id/current_apptmt_layout"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="16dp"
                    android:text="Current"
                    android:textSize="22sp"
                    android:id="@+id/rd_ss_current_apptmt_dt_lbl"
                    android:inputType="text"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_ss_current_apptmt_dt"
                    android:visibility="visible"
                    android:inputType="text"
                    android:layout_alignParentRight="true"
                    android:textSize="22sp"
                    />
                </RelativeLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_ss_babyMarkApptmt"
                    android:text="Mark as done"
                    android:onClick="MarkBabyApptmtDone"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="32dp"
                    android:id="@+id/rd_next_apptmt"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:height="16dp"
                        android:text="Next"
                        android:textSize="22sp"
                        android:id="@+id/rd_ss_next_apptmt_dt_lbl"
                        android:inputType="text"

                        />
                    <EditText
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rd_ss_next_apptmt_dt"
                        android:visibility="visible"
                        android:inputType="date"
                        android:layout_alignParentRight="true"
                        android:textSize="22sp"
                        />
                </RelativeLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_ss_babySetNextApptmt"
                    android:onClick="BabySetNextAppointment"
                    android:text="Set Next Appointment"
                    />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rd_ss_babyupdatedetails"
                android:onClick="UpdateDetails"
                android:text="Update other Details"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>